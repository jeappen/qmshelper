<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e1e1e1"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="20dp" >

    <!--
         <ImageView
        android:id="@+id/imageView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".5"-->
        <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="vertical" 
        android:id="@+id/submainlayout">
        <TextView
                    android:id="@+id/d1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

       

        <EditText
            android:id="@+id/fname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_rounded_corners"
            android:ems="10"
            android:hint="First Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="15dp" >
        </EditText>

        <EditText
            android:id="@+id/lname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_rounded_corners"
            android:ems="10"
            android:hint="Last Name"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="15dp" >
        </EditText>
        <TextView
                    android:id="@+id/d2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email ID"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:id="@+id/emailid_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_rounded_corners"
            android:ems="10"
            android:hint="Email ID"
            android:maxLines="1"
            android:padding="15dp" >
        </EditText>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.61"
                android:orientation="horizontal"
                android:text="Gender" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender: "
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <RadioButton
                    android:id="@+id/Female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="F" />

                <RadioButton
                    android:id="@+id/Male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                    android:id="@+id/DOB"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="DOB: --/--/---- "
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            
        <Button
            android:id="@+id/changeDOB"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundshapentn"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Set Date"
            android:onClick="showDatePickerDialog"
            android:textColor="#ffffff" />
        </LinearLayout>
        <TextView
                    android:id="@+id/d3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mobile Number"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:id="@+id/mobnum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_rounded_corners"
            android:ems="10"
            android:hint="eg:+91994047XXX0"
            android:inputType="text|phone"
            android:maxLines="1"
            android:padding="15dp" >
        </EditText>
       <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal" >
        <TextView
                    android:id="@+id/branchText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Branch: "
                   
                    android:textAppearance="?android:attr/textAppearanceMedium" />
        
        <Spinner
    android:id="@+id/branch_spinner"
    android:layout_width="0dip"
    android:layout_weight="1"
    android:ems="16"
    android:layout_height="wrap_content" />
        </LinearLayout>
         <EditText
            android:id="@+id/cbranch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_rounded_corners"
            android:ems="10"
            android:visibility="gone"
            android:hint="Branch"
            android:maxLines="1"
            android:padding="15dp" >
        </EditText>
        <TextView
                    android:id="@+id/d4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="College Name"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
          <EditText
              android:id="@+id/cname"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginBottom="5dp"
              android:background="@drawable/edittext_rounded_corners"
              android:ems="10"
              android:hint="eg:IIT Madras"
              android:maxLines="1"
              android:padding="15dp" >

        </EditText>
        <TextView
                    android:id="@+id/d5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="College Roll Number"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
        <EditText
            android:id="@+id/croll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_rounded_corners"
            android:ems="10"
            android:hint=""
            android:maxLines="1"
            android:padding="15dp" >
        </EditText>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
         

                <TextView
                    android:id="@+id/d6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Want Accomodation? : "
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.61"
                android:orientation="vertical"
                android:text="Accom" >

                <RadioButton
                    android:id="@+id/want"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes" />

                <RadioButton
                    android:id="@+id/notwanted"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="No" />
       
            </RadioGroup>
        </LinearLayout>
        
        <TextView
                    android:id="@+id/d7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
          <EditText
            android:id="@+id/city"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/edittext_rounded_corners"
            android:ems="10"
            android:hint="eg:Chennai"
            android:maxLines="1"
            android:padding="15dp" >
        </EditText>
        <TextView
                    android:id="@+id/d8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Passport ID"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        <EditText
            android:id="@+id/bcodeET"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittext_rounded_corners"
            android:ems="10"
            android:hint="Bar Code"
            android:padding="15dp" />

        <Button
            android:id="@+id/scanbut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundshapentn"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:onClick="Scan"
            android:text="Start Scan"
            android:textColor="#ffffff" />
        </LinearLayout>

        <EditText
            android:id="@+id/pw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/edittext_rounded_corners"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPassword"
            android:visibility="gone"
            android:padding="15dp" />

       <Button
            android:id="@+id/confirm_reg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundshapentn"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Make New Account and Update Details"
            android:textColor="#ffffff" />
       
       <Button
            android:id="@+id/update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundshapentn"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:text="Update Details"
            android:textColor="#ffffff" />
       <TextView
                    android:id="@+id/faq"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/faq"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
       <Button
            android:id="@+id/clear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/roundshapentn"
            android:paddingLeft="25dp"
            android:paddingRight="25dp"
            android:onClick="Clear"
            android:text="Clear All Fields"
            android:textColor="#ffffff" />
    </LinearLayout>
    
 </ScrollView>
</LinearLayout>